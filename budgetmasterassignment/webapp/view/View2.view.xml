<mvc:View
    controllerName="pgp.com.budgetmasterassignment.controller.View1"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:plugins="sap.m.plugins"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <f:DynamicPage
        headerExpanded="true"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Assignments Details" />
                </f:heading>
                <f:actions>
                    <Button
                        text="Edit"
                        type="Emphasized"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <form:SimpleForm
                editable="true"
                layout="ColumnLayout"
            >
                <form:content>
                    <Label text="Budget Code" />
                    <Input
                        showValueHelp="true"
                        placeholder="Budget Code"
                        showSuggestion="true"
                    />
                    <Label text="Initiative" />
                    <Input
                        showValueHelp="true"
                        placeholder="Initiative"
                        showSuggestion="true"
                    />
                    <Label text="Budget code Description" />
                    <Input
                        showValueHelp="true"
                        placeholder="Budget code Description"
                        showSuggestion="true"
                    />
                    <Label text="Financial Year" />
                    <Input
                        showValueHelp="true"
                        placeholder="Financial Year"
                        showSuggestion="true"
                    />
                    <Label text="WBS" />
                    <Input
                        showValueHelp="true"
                        placeholder="WBS"
                        showSuggestion="true"
                    />
                </form:content>
            </form:SimpleForm>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />

                <Button
                    text="Save"
                    press="onSave"
                    type="Accept"
                />
                <Button
                    text="Cancel"
                    press="onCancel"
                    type="Reject"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
