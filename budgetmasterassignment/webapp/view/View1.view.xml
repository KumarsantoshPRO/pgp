<mvc:View
    controllerName="pgp.com.budgetmasterassignment.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:Table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Page title="Budget Master Assignments">
        <content>
            <fb:FilterBar
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                showFilterConfiguration="false"
                showClearOnFB="true"
                clear="onFilterBarClear"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="code"
                        label="Budget Code"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <MultiComboBox
                                id="idBudget"
                                items="{/ZpsBudBdcodeSet}"
                            >
                                <core:Item
                                    key="{ZbudgCode}"
                                    text="{ZbudgCode}"
                                />
                            </MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Year"
                        label="Financial Year"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <MultiComboBox
                                id="idYear"
                                items="{oModelYearFilter>/}"
                            >
                                <core:Item
                                    key="{oModelYearFilter>year}"
                                    text="{oModelYearFilter>year}"
                                />
                            </MultiComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="WBS"
                        label="WBS"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <!-- <Input
                                showValueHelp="true"
                                placeholder="WBS"
                                showSuggestion="true"
                                valueHelpRequest="onEBSValueHelp"
                                value="{oModelFilter>/WBS} "
                                valueHelpOnly="true"
                            /> -->

                            <MultiInput
                                id="idWBS"
                                placeholder="Enter WBS"
                                showValueHelp="false"
                                showSuggestion="true"
                                valueLiveUpdate="true"
                                suggestionItemSelected="onWBSSelected"
                                suggestionRows="{
				path: '/ZpsBudWbsSet'
			}"
                            >
                                <suggestionColumns>
                                    <Column>
                                        <Label text="Code" />
                                    </Column>
                                    <Column>
                                        <Label text="Name" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label text="{Posid}" />
                                        <Label text="{Post1}" />
                                    </ColumnListItem>
                                </suggestionRows>
                            </MultiInput>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
            <Table:Table
                id="table"
                rows="{ModelForTable>/}"
                selectionMode="MultiToggle"
                ariaLabelledBy="title"
                enableSelectAll="false"
                visibleRowCount='15'
            >
                <!-- rowSelectionChange="onClickofItem" -->
                <Table:extension>
                    <OverflowToolbar
                        design="Transparent"
                        width="100%"
                    >
                        <content>
                            <Title
                                text="Assignments"
                                level="H2"
                            />

                            <ToolbarSpacer />
                            <Button
                                text="Edit"
                                type="Emphasized"
                                press="onEditButtonPress"
                                icon="sap-icon://edit"
                            />
                            <Button
                                text="Copy"
                                type="Neutral"
                                press="onCopyButtonPress"
                                icon="sap-icon://copy"
                            />
                            <Button
                                text="Delete"
                                press="onDeleteButtonPress"
                                type="Reject"
                                icon="sap-icon://delete"
                            />
                            <Button
                                text="Add New"
                                icon="sap-icon://add"
                                type="Accept"
                                press="onAddNew"
                            />
                            <Button
                                tooltip="Refresh"
                                icon="sap-icon://refresh"
                                class="myCustomIconStyle"
                                press="onResetButtonPress"
                            />
                        </content>
                    </OverflowToolbar>
                </Table:extension>
                <Table:columns>
                    <Table:Column sortProperty="ZBUDG_CODE">
                        <Label
                            text="Budget Code"
                            wrapping="true"
                        />
                        <Table:template>
                            <Text text="{path:'ModelForTable>ZBUDG_CODE'}" />
                        </Table:template>
                    </Table:Column>
                    <Table:Column sortProperty="ZBUDG_DISC">
                        <Label
                            text="Description"
                            wrapping="true"
                        />
                        <Table:template>
                            <Text text="{path:'ModelForTable>ZBUDG_DISC'}" />
                        </Table:template>
                    </Table:Column>
                    <Table:Column sortProperty="ZWBS_YEAR">
                        <Label
                            text="Financial Year"
                            wrapping="true"
                        />
                        <Table:template>
                            <Text text="{path:'ModelForTable>ZWBS_YEAR'}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column sortProperty="POSID">
                        <Label
                            text="WBS"
                            wrapping="true"
                        />
                        <Table:template>
                            <Text text="{path:'ModelForTable>POSID'}" />
                        </Table:template>
                    </Table:Column>
                </Table:columns>
            </Table:Table>
        </content>
    </Page>
</mvc:View>
