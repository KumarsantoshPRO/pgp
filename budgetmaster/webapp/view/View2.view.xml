<mvc:View
    controllerName="pgp.com.budgetmaster.controller.View2"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
>
    <f:DynamicPage
        headerExpanded="true"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Project Details" />
                </f:heading>
                <f:actions>
                    <Button
                        text="Edit"
                        type="Emphasized"
                        press="onEditButtonPress"
                        visible="{oPropertyModel>/editButton}"
                        icon="sap-icon://edit"
                    />
                    <Button
                        text="Copy"
                        type="Neutral"
                        press="onCopyButtonPress"
                        visible="{oPropertyModel>/copyButton}"
                        icon="sap-icon://copy"
                    />
                    <Button
                        text="Delete"
                        press="onDeleteButtonPress"
                        type="Reject"
                        visible="{oPropertyModel>/deleteButton}"
                        icon="sap-icon://delete"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <form:SimpleForm
                editable="true"
                layout="ColumnLayout"
            >
                <form:content>
                    <Label text="Project/BAU" />
                    <Select
                        selectedKey="{oModel>/PRJ_TYPE}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="Project"
                            text="Project"
                        />
                        <core:Item
                            key="BAU"
                            text="BAU"
                        />
                    </Select>
                    <Label text="Initiative" />
                    <Select
                        items="{/ZpsBudInitSet}"
                        selectedKey="{oModel>/ZINITI}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{DropdownValue}"
                            text="{DropdownValue}"
                        />
                    </Select>
                    <Label text="Technology" />
                    <!-- <Input
                        showValueHelp="true"
                        placeholder="Technology"
                        showSuggestion="true"
                        value="{oModel>/ZTLIST}"
                    /> -->
                    <Select
                        items="{/ZpsBudTechSet}"
                        selectedKey="{oModel>/ZTLIST}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{DropdownValue}"
                            text="{DropdownValue}"
                        />
                    </Select>
                    <Label text="Category" />
                    <!-- <Input
                        showValueHelp="true"
                        placeholder="Category"
                        showSuggestion="true"
                        value="{oModel>/ZCATEG}"
                    /> -->
                    <Select
                        items="{/ZpsBudCateSet}"
                        selectedKey="{oModel>/ZCATEG}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{DropdownValue}"
                            text="{DropdownValue}"
                        />
                    </Select>
                    <Label text="Expense Type" />
                    <!-- <Input
                        showValueHelp="true"
                        placeholder="Expense Type"
                        showSuggestion="true"
                        value="{oModel>/ZEXPTP}"
                    /> -->
                    <Select
                        items="{/ZpsBudExpeSet}"
                        selectedKey="{oModel>/ZEXPTP}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{DropdownValue}"
                            text="{DropdownValue}"
                        />
                    </Select>
                    <Label text="Spend Type" />
                    <!-- <Input
                        showValueHelp="true"
                        placeholder="Spend Type"
                        showSuggestion="true"
                        value="{oModel>/ZCAPEX_OPEX}"
                    /> -->
                    <Select
                        items="{/ZpsBudSptypeSet}"
                        selectedKey="{oModel>/ZCAPEX_OPEX}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{DropdownValue}"
                            text="{DropdownValue}"
                        />
                    </Select>
                    <Label text="Business Unit" />
                    <Select
                        items="{/ZpsBudPlantSet}"
                        selectedKey="{oModel>/WERKS}"
                        forceSelection="false"
                        editable="{oPropertyModel>/keyField}"
                    >
                        <core:Item
                            key="{Werks}"
                            text="{Name1}"
                        />
                    </Select>
                    <!-- <Input
                        placeholder="Business Unit"
                        value="{oModel>/WERKS}"
                        editable="{oPropertyModel>/keyField}"
                    /> -->
                    <Label text="Responsible" />
                    <Input
                        showValueHelp="true"
                        placeholder="Responsible"
                        showSuggestion="true"
                        valueHelpRequest="onresValueHelp"
                        value="{oModelTempValue>/ResName}{oModel>/ZWBS_OWNER}"
                        editable="{oPropertyModel>/editClicked}"
                        valueHelpOnly="true"
                    />

                    <Label text="HOD" />
                    <Input
                        showValueHelp="true"
                        placeholder="HOD"
                        showSuggestion="true"
                        valueHelpRequest="onHODValueHelp"
                        value="{oModelTempValue>/HODName}{oModel>/ZPRJ_HOD}"
                        editable="{oPropertyModel>/editClicked}"
                        valueHelpOnly="true"
                    />
                    <Label text="Remarks" />
                    <TextArea
                        placeholder="Remarks"
                        value="{oModel>/ZREMARKS}"
                        editable="{oPropertyModel>/editClicked}"
                    />
                    <Label text="Budet Code Description" />
                    <Input
                        placeholder="Budet Code Description"
                        value="{oModel>/ZBUDG_DISC}"
                        editable="{oPropertyModel>/editClicked}"
                    />
                    <Label text="Active / Inactive" />

                    <Select
                        selectedKey="{oModel>/ZBUDG_STATUS}"
                        forceSelection="false"
                        editable="{oPropertyModel>/editClicked}"
                    >
                        <core:Item
                            key="true"
                            text="Active"
                        />
                        <core:Item
                            key="false"
                            text="Inactive"
                        />
                    </Select>
                    <!-- <Label text="Budget Code" />
                    <Input
                        showValueHelp="true"
                        placeholder="Budget Code"
                        showSuggestion="true"
                        value="{oModel>/ZBUDG_CODE}"
                    /> -->
                </form:content>
            </form:SimpleForm>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />

                <Button
                    text="Save"
                    press="onSave"
                    type="Accept"
                    visible="{oPropertyModel>/saveButton}"
                />
                <Button
                    text="Update"
                    press="onUpdateButtonPress"
                    type="Emphasized"
                    visible="{oPropertyModel>/updateButton}"
                />
                <Button
                    text="Cancel"
                    press="onCancelButtonPress"
                    type="Reject"
                    visible="{oPropertyModel>/cancelButton}"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
