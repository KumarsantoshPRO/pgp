<mvc:View
    controllerName="pgp.com.budgetforecast.controller.View2"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:plugins="sap.m.plugins"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:Table="sap.ui.table"
>
    <f:DynamicPage
        headerExpanded="true"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Budget Forecast" />
                </f:heading>
                <f:actions />
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <form:SimpleForm
                        editable="true"
                        layout="ColumnLayout"
                    >
                        <form:content>
                            <Label text="Budget Code" />
                            <Select
                                items="{/ZpsBudBdcodeSet}"
                                selectedKey="{oModel>/ZBUDG_CODE}"
                                forceSelection="false"
                                editable="{oPropertyModel>/keyField}"
                            >
                                <core:Item
                                    key="{ZbudgCode}"
                                    text="{ZbudgCode}"
                                />
                            </Select>

                            <Label text="Financial Year" />
                            <Select
                                items="{oModelYear>/}"
                                selectedKey="{oModel>/ZWBS_YEAR}"
                                forceSelection="false"
                                editable="{oPropertyModel>/keyField}"
                            >
                                <core:Item
                                    key="{oModelYear>year}"
                                    text="{oModelYear>year}"
                                />
                            </Select>
                            <Label text="WBS" />
                            <Input
                                showValueHelp="true"
                                placeholder="WBS"
                                showSuggestion="true"
                                valueHelpRequest="onEBSValueHelp"
                                value="{oModel>/POSID} "
                                valueHelpOnly="true"
                                editable="{oPropertyModel>/keyField}"
                            />

                            <Label text="Released Budget" />
                            <Input
                                placeholder="Released Budget"
                                value="{oModel>/ZREL_BEDG}"
                                editable="{oPropertyModel>/editClicked}"
                            />
                            <Label text="Utilized Budget" />
                            <Input
                                placeholder="Utilized Budget"
                                value="{oModel>/ZACTU_EXP}"
                                editable="{oPropertyModel>/editClicked}"
                            />
                        </form:content>
                    </form:SimpleForm>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table>
                <columns>
                    <Column hAlign="Center">
                        <Text text="Apr" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="May" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Jun" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Jul" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Aug" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Sep" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Oct" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Nov" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Dec" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Jan" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Feb" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Mar" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Input
                                value="{oModel>/ZAPR}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZMAY}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZJUNE}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZJULY}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZAUG}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZSEPT}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZOCT}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZNOV}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZDEC}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZJAN}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZFEB}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                            <Input
                                value="{oModel>/ZMARCH}"
                                editable="{oPropertyModel>/editClicked}"
                                type="Number"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />

                <Button
                    text="Save"
                    press="onSave"
                    type="Accept"
                    visible="{oPropertyModel>/saveButton}"
                />
                <Button
                    text="Update"
                    press="onUpdateButtonPress"
                    type="Emphasized"
                    visible="{oPropertyModel>/updateButton}"
                />
                <Button
                    text="Cancel"
                    press="onCancelButtonPress"
                    type="Reject"
                    visible="{oPropertyModel>/cancelButton}"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
